@model Encantos_do_Brasil.ViewModels.CidadeEstadoViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container" id="menu" >
    <div class="row">
        <div class="col-md-12">
            <section class="highlight">
                <h1>Melhores Destinos</h1>
            </section>
        </div>
    </div>
</div>
<div class="container">
    @foreach (var cidade in Model.Cidades)
    {
        <div class="item">
            <a href="@Url.Action("Details", "Cidades", new { id = cidade.Id })">
                <div class="polaroid">
                    <div class="imagem">
                        <img src="@Url.Action("ExibirImagem", "ImagensCidades", new { id = cidade.Id, tipoImagem = "Principal" })" alt="Imagem da cidade" />
                    </div>
                    <div class="texto">
                        @cidade.Nome
                    </div>
                </div>
            </a>
        </div>
    }

    @foreach (var estado in Model.Estados)
    {
        <div class="item">
            <a href="@Url.Action("Details", "Estados", new { id = estado.Id })">
                <div class="polaroid">
                    <div class="imagem">
                        <img src="@Url.Action("ExibirImagem", "ImagensEstados", new { id = estado.Id, tipoImagem = "Principal" })" alt="Imagem do estado" />
                    </div>
                    <div class="texto">
                        @estado.Nome
                    </div>
                </div>
            </a>
        </div>
    }
</div>
