@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - En-Cantos do Brasil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cadastro.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cidade.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Encantos_do_Brasil.styles.css" asp-append-version="true" />

</head>

<body>
    <style>
        .navbar-nav > li:not(:last-child) {
            margin-right: 10px; /* Espaçamento entre os itens do menu */
            padding-right: 10px; /* Espaçamento interno dos itens do menu */
            border-right: 1px solid #ccc; /* Adiciona uma borda direita */
        }


        .navbar-nav > li > a:hover {
            color: #000; /* Define a cor do texto quando o mouse está sobre o item */
            background-color: #aad8bf; /* Define a cor de fundo quando o mouse está sobre o item */
            border-radius: 10px;
        }
    </style>


    <header>
        <div class="container">

            <div class="row">


                <nav class="navbar navbar-expand-lg navbar-light">


                    <div class="container-fluid col-md-1">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            <img src="~/css/logoPrincipal.png" alt="Logo" width="88" height="auto">
                        </a>
                    </div>

                    <div class="container-fluid col-md-9">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"> Página Inicial</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Create"> Cadastro</a>

                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Details" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)"> Perfil</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Favoritos" asp-action="Index"> Favoritos</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Cidades" asp-action="Index"> Cidades</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Estados" asp-action="Index"> Estados</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="ImagensCidades" asp-action="Index"> Imagens</a>
                                </li>
                            </ul>
                            <form asp-action="FazerPesquisa" asp-controller="Home" class="d-flex" role="search">
                                <input class="form-control me-2" type="search" name="pesquisa" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success" type="submit">Search</button>
                            </form>
                        </div>
                    </div>

                    <div class="container-fluid col-md-2">
                        <ul class="navbar-nav">

                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    Olá, @User.Identity.Name <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Logout">Sair</a>

                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Login" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Login</a>
                                </li>
                            }
                        </ul>
                    </div>
                </nav>

            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <a>"O mundo é um livro, e quem não viaja lê apenas uma página." - Santo Agostinho</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
