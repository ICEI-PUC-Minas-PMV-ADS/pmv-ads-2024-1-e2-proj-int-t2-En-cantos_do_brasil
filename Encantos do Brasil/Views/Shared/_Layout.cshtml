@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - En-Cantos do Brasil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cadastro.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cidade.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Encantos_do_Brasil.styles.css" asp-append-version="true" />

</head>

<body>

    <header>
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light d-flex justify-content-end">
                <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse ml-auto d-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item ml-auto">
                            <h4> Melhores Destinos</h4>
                        </li>
                        <li class="nav-item ml-auto">
                            <a class="nav-link" asp-area="" asp-controller="Estados" asp-action="Index" style="color:black; ">Estados</a>
                        </li>
                        <li class="nav-item ml-auto">
                            <a class="nav-link" asp-area="" asp-controller="Cidades" asp-action="Index" style="color:black; ">Cidades</a>
                        </li>
                        <li class="nav-item ml-auto">
                            <a class="nav-link" asp-area="" asp-controller="RegiaoPais" asp-action="Index" style="color: black ; ">Regiões</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item ml-auto">
                                Olá, @User.Identity.Name <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Logout">Sair</a>
                            </li>
                        }

                        else
                        {
                            <li class="nav-item ml-auto">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Login" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Login</a>
                            </li>
                        }

                    </ul>

                    <form asp-action="FazerPesquisa" asp-controller="Home" class="d-flex " role="search">
                        <input class="form-control me-2 rounded-pill  " type="search" name="pesquisa" placeholder="Buscar" aria-label="Search">

                    </form>
                </div>
            </nav>
        </div>
    </header>



    <main role="main" class="pb-8 ">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <h4>Contato</h4>
        <h5>E-mail: contao@encantos_brasil.com.br </h5>
    </footer>

</body>


@section Scripts{

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
}
@await RenderSectionAsync("Scripts", required: false)
</html>
