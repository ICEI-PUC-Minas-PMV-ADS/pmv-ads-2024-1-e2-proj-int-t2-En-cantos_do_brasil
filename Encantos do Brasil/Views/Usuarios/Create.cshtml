@model Encantos_do_Brasil.Models.Usuario

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="pt-BR">

<body>
    <div class="container">
        <div class="content">
            <div class="rectangle">
                <div class="circle">
                    <img src="/css/CadastroIcon.png" alt="Ícone" class="icon">
                </div>
                <span class="welcome-text">Bem-Vindo!</span>
            </div>
            <div class="registration-form">
                <h3>Crie uma conta</h3>
                <hr />
                <form asp-action="Create">
                    <div class="row g-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-4">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Preferencia" class="control-label"></label>
                        <select asp-for="Preferencia" class="form-control" asp-items="Html.GetEnumSelectList<Preferencia>()"></select>
                        <span asp-validation-for="Preferencia" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="Senha" class="control-label"></label>
                        <input asp-for="Senha" class="form-control" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary" type="submit">Cadastrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
